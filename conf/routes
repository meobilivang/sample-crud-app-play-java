# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomeController.index

GET     /hello-world                controllers.HomeController.helloWorld

# User Routes
GET /users                          controllers.UserController.getUserList()
GET /users/:id                      controllers.UserController.getUserById(id: Int)
POST /users/create                  controllers.UserController.createUser()
PUT /users/update                   controllers.UserController.getUserById()
DELETE /users/:id                   controllers.UserController.deleteUser(id: Int)

#Tasks Routes
GET /tasks                          controllers.TaskController.getTaskList()
GET /tasks/:id                      controllers.TaskController.getTaskById(id: Int)
POST /tasks/create                  controllers.TaskController.createTask()
PUT /tasks/update                   controllers.TaskController.updateTask()
DELETE /tasks/:id                   controllers.TaskController.deleteTask(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
